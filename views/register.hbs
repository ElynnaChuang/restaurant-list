<div class="restaurant-bg">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-md-8 col-lg-5 mx-auto">
        <div class="card card-body login-card p-4 mt-5">
          <h1 class="mx-auto mb-5 text-primary">註冊</h1>
          {{> message}}

          <form action="/users/register" method="post">
            <div class="form-group mb-4">
              <label for="name">姓名</label>
              <input type="text" name="name" id="name" class="form-control" placeholder="輸入你的名字或是暱稱" value="{{name}}">
            </div>

            <div class="form-group mb-4">
              <label for="email">E-mail</label>
              <input type="email" name="email" id="email" class="form-control" placeholder="輸入Email作為帳號" value="{{email}}">
            </div>
            <div class="form-group mb-4">
              <label for="password">密碼</label>
              <input type="password" name="password" id="password" class="form-control" placeholder="輸入密碼">
            </div>

            <div class="form-group mb-4">
              <label for="confirmPassword">再次輸入密碼</label>
              <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="請再輸入一次密碼">
            </div>

            <div class="d-grid mt-5">
              <button type="submit" class="btn btn-primary btn-block">註冊帳號</button>
            </div>

          </form>

          <div class="d-flex align-items-center mt-4">
            <hr style="width: 35%" class="me-auto">
            <p class="m-0">其他登入方式</p>
            <hr style="width: 35%" class="ms-auto">
          </div>
          <div class="d-grid mt-3">
            <a href="/auth/facebook" class="btn btn-secondary btn-block">Facebook登入</a>
          </div>
          <div class="d-flex justify-content-center mt-4">
            已經有帳號了？<a href="/users/login">登入</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>